<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="7dp"
    android:background="@color/blue"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="22dp"
            android:paddingBottom="10dp"
            android:fontFamily="@font/serif"
            android:text="Distance Tracking App" />

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:textSize="17dp"
            android:fontFamily="@font/serif"
            android:text="Current Address:" />

        <TextView
            android:id="@+id/latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:textSize="17dp"
            android:fontFamily="@font/serif"
            android:text="Latitude:" />

        <TextView
            android:id="@+id/longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:textSize="17dp"
            android:fontFamily="@font/serif"
            android:text="Longitude:" />

        <TextView
            android:id="@+id/distanceTraveled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:textSize="17dp"
            android:fontFamily="@font/serif"
            android:text="Total Distance Traveled" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/addressVisited"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:paddingRight="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/serif"
                android:text="Addresses Visited:" />

            <TextView
                android:id="@+id/timeSpent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:textStyle="bold"
                android:fontFamily="@font/serif"
                android:text="Time Spent @ Locations:" />
        </LinearLayout>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:paddingBottom="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/addressVisited1"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:textSize="18dp"
                    android:fontFamily="@font/serif"
                    android:text="Address Visited 1" />

                <TextView
                    android:id="@+id/timeSpent1"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:fontFamily="@font/serif"
                    android:text="Time Spent 1" />
            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</RelativeLayout>